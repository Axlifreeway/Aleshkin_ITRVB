<?xml version="1.0"?>
<phpunit bootstrap="vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="Default">
            <directory>src/Tests</directory>
        </testsuite>
    </testsuites>

    <coverage>
        <include>
            <directory suffix=".php">src/Models</directory>
        </include>
        <exclude>
            <directory suffix=".php">src/Tests</directory>
        </exclude>
    </coverage>
</phpunit>